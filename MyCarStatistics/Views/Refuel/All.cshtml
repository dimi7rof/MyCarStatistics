@model IEnumerable<RefuelViewModel>

@{
    ViewData["Title"] = "All Refuels";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="text-center row">
    <div class="form-row align-items-center">
        <a asp-area="" asp-controller="Car" asp-action="Overview">
            <input type="submit" value="Back to Overview" class="fs-6 btn btn-primary mb-3 p-2" />
        </a>
        <a asp-route-carId="@ViewBag.Id" asp-area="" asp-controller="Refuel" asp-action="Refuel">
            <input type="submit" value="Refuel" class="fs-6 btn btn-primary mb-3 p-2" />
        </a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th class="col-2 mt-2" scope="col">Total Liters</th>
                <th class="col-2 mt-2" scope="col">@Model.Sum(l => l.Liters)</th>
                <th class="col-1 mt-2" scope="col"></th>
                <th class="col-2 mt-2" scope="col">Total kms</th>
                <th class="col-2 mt-2" scope="col">@Model.Sum(l => l.Trip)</th>
                <th class="col-1 mt-2" scope="col"></th>
                <th class="col-1 mt-2" scope="col">Average L/100km</th>
                <th class="col-1 mt-2" scope="col"></th>
            </tr>
        </thead>
    </table>
    <table class="table">
        <thead>
            <tr>
                <th class="col-2 mt-2" scope="col">Brand</th>
                <th class="col-2 mt-2" scope="col">Model</th>
                <th class="col-2 mt-2" scope="col">Date</th>
                <th class="col-1 mt-2" scope="col">Liters</th>
                <th class="col-1 mt-2" scope="col">Cost</th>
                <th class="col-1 mt-2" scope="col">Trip</th>
                <th class="col-2 mt-2" scope="col">GasStation</th>
                <th class="col-2 mt-2" scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var refu in Model)
            {
                <tr>
                    <td>@refu.Brand</td>
                    <td>@refu.CarModel</td>
                    <td>@refu.Date</td>
                    <td>@refu.Liters</td>
                    <td>@refu.Cost</td>
                    <td>@refu.Trip</td>
                    <td>@refu.GasStation</td>
                    <td>
                        <form class="input-group-sm" asp-route-refId="@refu.Id" asp-controller="Refuel" asp-action="Delete" method="post">
                            <input type="submit" value="Delete" class="fs-6 btn btn-danger mb-3 p-2" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
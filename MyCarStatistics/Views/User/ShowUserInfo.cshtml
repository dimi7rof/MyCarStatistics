@model UserViewModel



<h1 class="text-center">@User.Identity?.Name</h1>


<form asp-controller="User" asp-action="Edit" method="post">
    <div class="form-row align-items-center">
        <div class="col-md-6" hidden>
            <label asp-for="@Model.Id"></label>
            <input asp-for="@Model.Id" type="text" value="@Model.Id" class="form-control mb-2">
            <span asp-validation-for="@Model.Id" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="@Model.Email">Email: @Model.Email</label>
        </div>
        <div class="col-md-6">
            <label asp-for="@Model.UserName">UserName: @Model.UserName</label>
        </div>
        <div class="col-md-6">
            <label asp-for="@Model.FirstName">FirstName: @Model.FirstName</label>
        </div>
        <div class="col-md-6">
            <label asp-for="@Model.LastName">LastName: @Model.LastName</label>
        </div>
        <form class="input-group-sm" asp-route-userId="@Model.Id" asp-controller="User" asp-action="Edit" method="post">
            <input type="submit" value="Edit" class="fs-6 btn btn-primary mb-3 p-2" />
        </form>
        <form class="input-group-sm" asp-route-userId="@Model.Id" asp-controller="User" asp-action="Delete" method="post">
            <input type="submit" value="Delete" class="fs-6 btn btn-danger mb-3 p-2" />
        </form>
    </div>
</form>
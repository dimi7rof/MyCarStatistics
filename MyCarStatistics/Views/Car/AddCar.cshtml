@model CarViewModel

@{
    ViewData["Title"] = "Add Car";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <section>
            <form asp-controller="Car" asp-action="AddCar" method="post">
                <div class="form-row align-items-center">
                    <div class="col-md-6">
                        <label asp-for="@Model.Brand"></label>
                        <input asp-for ="@Model.Brand" type="text" class="form-control mb-2" id="Brand">
                        <span asp-validation-for="@Model.Brand" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="@Model.CarModel">Model</label>
                        <input asp-for="@Model.CarModel" type="text" class="form-control mb-2" id="CarModel">
                        <span asp-validation-for="@Model.CarModel" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary mb-2">Submit</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}